<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="001" author="fsena">
        <createTable tableName="client"
                     remarks="A table to contain all clients">
            <column name="id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="provider" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="now()">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="social_name">
            <column name="id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(250)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created" type="timestamp" defaultValueDate="now()">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="email">
            <column name="id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="client" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="client" baseColumnNames="provider"
                                 constraintName="client_socialname_fk"
                                 referencedTableName="social_name" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="email" baseColumnNames="client"
                                 constraintName="email_client_fk"
                                 referencedTableName="client" referencedColumnNames="id" />

        <rollback>
            <dropTable tableName="client" />
            <dropTable tableName="social_name" />
            <dropTable tableName="email" />
            <dropForeignKeyConstraint baseTableName="client" constraintName="client_socialname_fk" />
            <dropForeignKeyConstraint baseTableName="email" constraintName="email_client_fk" />
        </rollback>
    </changeSet>
</databaseChangeLog>